#!/bin/bash

set -e

DIR="$( cd "$( dirname "${BASH_SOURCE[0]}" )" && pwd )"

setUp() {
  cd "$DIR"
  rm -rf "$DIR"/sandbox
  mkdir "$DIR"/sandbox
  cd "$DIR"/sandbox
  git init > /dev/null
}

# shellcheck disable=SC2013
suite() {
  for test_name in $(grep '^it_' "$0" | cut -d '(' -f 1); do
    suite_addTest "$test_name"
  done
}

# shellcheck disable=SC1090
. "$DIR"/shunit2/2.1/src/shunit2
